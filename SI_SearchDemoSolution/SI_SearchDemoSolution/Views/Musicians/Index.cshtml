@model IEnumerable<SI_SearchDemoSolution.Models.Musician>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
    <a asp-action="DetailedSearch" class="btn btn-success">Detailed Search</a>
    Displaying @ViewBag.SelectedMusicians out of @ViewBag.AllMusicians Musicians
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instrument)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Instrument.Name)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.MusicianId">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
